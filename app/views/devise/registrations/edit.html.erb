<div class="bg-gray-100 py-7">
  <%= form_with model: @user, url: registration_path(@user), method: :PATCH, id: "user_update_form", class: "w-full", local: true do |f| %>
    <div class="container px-5 py-6 mx-auto my-10 flex flex-col items-center lg:w-2/4 md:w-2/4 sm:w-96 bg-white rounded-lg">

      <h2 class="text-gray-900 text-2xl font-bold title-font my-5">ユーザー情報の変更</h2>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="relative my-4 flex flex-col">
        <label id="nickname" class="flex flex-row leading-7 text-base text-gray-600">
          ニックネーム
        </label>
        <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", id: "nickname", placeholder: "6文字以内", class: "w-full bg-white rounded border border-gray-300 focus:border-gray-400 focus:ring-2 focus:ring-gray-400 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
      </div>
      <div class="relative mb-4 flex flex-col">
        <label id="email" class="flex flex-row leading-7 text-base text-gray-600">
          メールアドレス
        </label>
        <%= f.email_field :email, autocomplete: "email", id: "email", placeholder: "重複不可", class: "w-full bg-white rounded border border-gray-300 focus:border-gray-400 focus:ring-2 focus:ring-gray-400 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
      </div>

      <div class="relative mb-4 flex flex-col">
        <label id="password" class="flex flex-row leading-7 text-base text-gray-600">
          新しいパスワード
        </label>
        <%= f.password_field :password, autocomplete: "current-password", id: "password", placeholder: "6文字以上の英数字混合", class: "w-full bg-white rounded border border-gray-300 focus:border-gray-400 focus:ring-2 focus:ring-gray-400 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
      </div>

      <div class="relative mb-4 flex flex-col">
        <label id="password_confirmation" class="flex flex-row leading-7 text-base text-gray-600">
          新しいパスワード(確認)
        </label>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", id: "password_confirmation", placeholder: "パスワードの再入力", class: "w-full bg-white rounded border border-gray-300 focus:border-gray-400 focus:ring-2 focus:ring-gray-400 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
      </div>

      <div class="relative mb-4 flex flex-col">
        <label id="current_password" class="flex flex-row leading-7 text-base text-gray-600">
          現在のパスワード
          <abbr class="text-red-500 ml-1" title="必須">*</abbr>
        </label>
        <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "設定中のパスワードを入力してください", class: "w-full bg-white rounded border border-gray-300 focus:border-gray-400 focus:ring-2 focus:ring-gray-400 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
      </div>

      <%= f.submit "更新する", class: "block text-white bg-black border-0 mt-2 py-2 px-8 focus:outline-none hover:bg-gray-200 hover:text-black rounded text-lg" %>
    <% end %>

    <%= link_to '退会はこちらから', edit_user_path(@user), class: "mt-4 text-lg text-blue-400 bg-white bg-opacity-0 hover:text-blue-600" %>
  </div>
</div>