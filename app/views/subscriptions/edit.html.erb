<div class="bg-gray-100 py-8">
  <%= form_with model: [@user, @subs], url: user_subscription_path(@user, @subs), id: "sub-edit-form", class:"w-full", local: true do |f| %>
    <div class="container px-5 py-6 mx-auto my-8 flex flex-col items-center lg:w-2/4 md:w-2/4 sm:w-96 bg-white rounded-lg">
      <h2 class="text-gray-900 text-2xl font-bold title-font my-5">サブスク編集</h2>

      <%= render "shared/error_messages", model: f.object %>
      <%= render "shared/error_messages_second", model: @renewal if @renewal != nil %>

      <div class="my-2 mx-auto">

          <div class="relative p-2 w-10/12 mx-auto">
              <label for="name" class="block text-gray-600">サブスク名</label>
              <%= f.text_field :name, id:"name", placeholder:"10文字以内" ,maxlength:"10", class: "w-full focus:border-gray-400 focus:ring-2 focus:ring-gray-400 bg-gray-100 bg-opacity-50 rounded border border-gray-300 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
          </div>

          <div class="relative p-2 w-10/12 mx-auto">
              <label for="price" class="block text-gray-600">価格</label>
              <%= f.number_field :price, class:"", id:"price", placeholder:"数字のみOK", class: "w-full focus:border-gray-400 focus:ring-2 focus:ring-gray-400 bg-gray-100 bg-opacity-50 rounded border border-gray-300 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
          </div>

          <%#<div class="relative p-2 w-10/12 mx-auto">
              <label for="contract_data" class="block text-gray-600">契約開始日</label>
              <%= f.date_field :contract_date, id:"contract_date", placeholder:"", class: "w-full focus:border-gray-400 focus:ring-2 focus:ring-gray-400 bg-gray-100 bg-opacity-50 rounded border border-gray-300 text-base outline-none text-gray-700 py-1 px-3 resize-none transition-colors ease-in-out"
          </div>%>

          <div class="relative p-2 w-10/12 mx-auto">
              <label for="update_cycle" class="block text-gray-600">更新サイクル</label>
              <%= f.number_field :update_cycle, id:"update_cycle", placeholder:"数値のみOK", class:"w-6/12 focus:border-gray-400 focus:ring-2 focus:ring-gray-400 bg-gray-100 bg-opacity-50 rounded border border-gray-300 text-base outline-none text-gray-700 py-1 px-3 resize-none leading-6 transition-colors duration-200 ease-in-out" %>
              <%= f.collection_radio_buttons(:update_type_id, UpdateType.all, :id, :name, {}, {class:"mr-px ml-2 focus:border-gray-400 focus:ring-2 focus:ring-gray-400", id:"update_type_id"}) %>
          </div>

          <div class="hidden" id="day_type_btn" >
              <label for="update_day_type_id" class="block text-gray-600 mb-2">更新日のタイプ</label>
              <%= f.check_box(:update_day_type_id, {class:"form-checkbox h-4 w-4"}, 1, 2) %>
              <span class="ml-2">1日更新ならチェック</span>
          </div>

          <div class="test relative mt-2 p-2 w-10/12 mx-auto">
            <%= f.submit "更新する" ,id: 'sub-edit-btn', class:"flex mx-auto text-white bg-black border-0 focus:outline-none hover:bg-gray-200 hover:text-black py-2 px-8 rounded text-lg" %>
          </div>

          <div class="relative mt-2 p-2 w-10/12 mx-auto text-center">
            <%= link_to '＊契約日を変更したいとき', '#', class: 'text-sm text-blue-400 hover:bg-gray-200' %>
          </div>
      </div>
    </div>
  <% end %>
</div>