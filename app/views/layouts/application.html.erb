<!DOCTYPE html>
<html>
  <head>
    <title>LookBack</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
    <%= stylesheet_link_tag 'output' %>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <%= favicon_link_tag('favicon.ico') %>
    <%= favicon_link_tag('android-touch-icon', type: "image/png", rel: 'android-touch-icon', sizes: '192x192') %>
    <%= favicon_link_tag('apple-touch-icon', type: "image/png", rel: 'apple-touch-icon', sizes: '180x180') %>
  </head>

  <body>
    <% unless current_page?(root_path) %>
      <%= render 'shared/header' %>
    <% end %>
    <%= yield %>
    <% unless current_page?(root_path) %>
      <%= render 'shared/footer' %>
    <% end %>
  </body>
</html>
