<div class="bg-gray-100 py-8">
  <%= form_with model: [@review_action], url: user_subscription_reviews_path(@user, @subs), method: :POST, class:"w-full", local: true do |f| %>
    <div class="container px-5 py-6 mx-auto my-8 flex flex-col items-center lg:w-2/4 md:w-2/4 sm:w-96 bg-white rounded-lg">
      <%# <h2 class="text-gray-900 text-2xl font-bold title-font my-5">このサブスクは、<br>いかがでしたか？</h2> %>

      <%= render "shared/error_messages", model: f.object %>
      <%#= render "shared/error_messages_second", model: @renewal if @renewal != nil %>

      <div class="my-2 mx-auto">
        <h2 class="text-gray-900 text-2xl text-center font-bold title-font my-5">サブスクの振り返り</h2>
        <div class="flex justify-center py-4" id="review_rate"></div>
        <div class="relative p-2 mx-auto">
            <%= f.text_area :review_comment, id:"review_comment", placeholder:"サブスクについて、感じたこと何でも書いてみてください！", size: "70x4",maxlength:"300", class: "word_count w-full focus:border-gray-400 focus:ring-2 focus:ring-gray-400 bg-gray-100 bg-opacity-50 rounded border border-gray-300 text-base outline-none text-gray-700 py-1 px-3 leading-8" %>
        </div>
        <div class="text-right pr-2">あと<span class="word_remaining">300</span>文字</div>

        <h2 class="text-gray-900 text-2xl text-center font-bold title-font my-5">アクションプランの振り返り</h2>
        <div class="flex justify-center py-4" id="action_rate"></div>
        <div class="relative p-2 mx-auto">
            <%= f.text_area :action_review_comment, id:"action_comment", placeholder:"サブスクについて、感じたこと何でも書いてみてください！", size: "70x4",maxlength:"300", class: "word_count w-full focus:border-gray-400 focus:ring-2 focus:ring-gray-400 bg-gray-100 bg-opacity-50 rounded border border-gray-300 text-base outline-none text-gray-700 py-1 px-3 leading-8" %>
        </div>
        <div class="text-right pr-2">あと<span class="word_remaining" id="action_comment_length">300</span>文字</div>

        <h2 class="text-gray-900 text-2xl text-center font-bold title-font my-5">アクションプランの設定</h2>
        <div class="relative p-2 mx-auto">
            <%= f.text_area :action_plan, id:"review_comment", placeholder:"次回更新日までのアクションプランを設定しましょう！", size: "70x4",maxlength:"300", class: "word_count w-full focus:border-gray-400 focus:ring-2 focus:ring-gray-400 bg-gray-100 bg-opacity-50 rounded border border-gray-300 text-base outline-none text-gray-700 py-1 px-3 leading-8" %>
        </div>
        <div class="text-right pr-2">あと<span class="word_remaining">300</span>文字</div>

        <div class="relative mt-2 p-2 mx-auto">
          <%= f.submit "レビュー" ,class:"flex mx-auto text-white bg-black border-0 focus:outline-none hover:bg-gray-200 hover:text-black py-2 px-8 rounded text-lg" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

