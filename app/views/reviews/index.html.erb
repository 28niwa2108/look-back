<section class="text-gray-600 body-font">
  <div class="container px-5 py-24 mx-auto">
    <div class="flex flex-col text-center w-full mb-20">
      <h2 class="text-xs text-pink-400 tracking-widest font-medium title-font mb-1 mr-8">Look Back Data</h2>
      <div class="flex justify-center">
        <div>
          <%= link_to @subs.name, user_subscription_path(@user, @subs), class: "sm:text-3xl text-2xl text-gray-600 hover:bg-gray-400 hover:bg-opacity-20" %>
        </div>
        <%# 未レビューサブスクがあれば、未レビュー一覧へのリンクを表示する %>
        <% if @un_reviews %>
          <div class="animate-bounce ml-6">
            <div class="bubble_index hidden" id="bubble_message">
              <span class="bubble_word w-32 rounded-lg text-sm">レビュー待ち</span>
            </div>
            <a href=<%= all_index_user_reviews_path(@user) %> id="un_reviews_link" class="sm:px-4 pt-3 pb-3 sm:w-auto justify-center sm:justify-start title-font font-medium inline-flex items-center hover:bg-gray-400 hover:bg-opacity-20 text-pink-400 rounded-xl">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
              </svg>
            </a>
          </div>
        <% end %>
        <%# 未レビューサブスクがあれば、未レビュー一覧へのリンクを表示する %>
      </div>
    </div>
    <div class="flex flex-wrap -m-4">
    <% @reviews.each do |review| %>
      <div class="relative p-4 md:w-1/2 lg:w-1/3 w-full">
      <% if review.later_check.id == 2 %>
        <span class="absolute left-3 top-3 rounded-full h-4 w-4 bg-pink-300"></span>
        <span class="absolute left-2.5 top-2.5 animate-ping inline-flex h-5 w-5 rounded-full bg-pink-400 opacity-75"></span>
      <% end %>
        <div class="flex rounded-lg h-full bg-gray-100 bg-opacity-90 p-8 flex-col">
          <div class="flex items-center mb-3">
            <div class="w-8 h-8 mr-3 inline-flex items-center justify-center rounded-full bg-pink-300 text-white flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
              </svg>
            </div>
            <h2 class="text-gray-600 text-xl title-font font-medium"><%= review.start_date %> ~ <%= review.end_date %></h2>
          </div>
          <div class="flex-grow"> 
            <span class="leading-relaxed text-base font-bold border-b-2 border-gray-400">Action Plan</span>
            <p class="leading-relaxed text-base"><%= review.action_plan.action_plan.truncate(30) %></p>
            <a href= <%=  user_subscription_review_path(@user, review. subscription_id, review.id) %>  class="mt-3 text-pink-400 inline-flex items-center">Look More
              <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 ml-2" viewBox="0 0 24 24">
                <path d="M5 12h14M12 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</section>